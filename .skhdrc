# focus window
 ctrl + alt - left : yabai -m window --focus west
 ctrl + alt - right : yabai -m window --focus east
 ctrl + alt - up : yabai -m window --focus north
 ctrl + alt - down : yabai -m window --focus south

# swap managed window
 ctrl + cmd - left : yabai -m window --swap west 
 ctrl + cmd - up : yabai -m window --swap north
 ctrl + cmd - right : yabai -m window --swap east
 ctrl + cmd - down : yabai -m window --swap south

# balance size of windows
 shift + alt - down : yabai -m space --balance

# make floating window fill screen
 shift + alt - up     : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill left-half of screen
 shift + alt - left   : yabai -m window --grid 1:2:0:0:1:1

# make floating window fill right-half of screen
 shift + alt - right  : yabai -m window --grid 1:2:1:0:1:1

# create desktop
shift + cmd - c : yabai -m space --create

# destroy desktop
 shift + cmd - d : yabai -m space --destroy

# fast focus desktop
 cmd + alt - x : yabai -m space --focus recent
 cmd + alt - 1 : yabai -m space --focus 1
 cmd + alt - 2 : yabai -m space --focus 2
 cmd + alt - 3 : yabai -m space --focus 3
 cmd + alt - 4 : yabai -m space --focus 4
 cmd + alt - 5 : yabai -m space --focus 5
 cmd + alt - 6 : yabai -m space --focus 6
 cmd + alt - 7 : yabai -m space --focus 7
 cmd + alt - 8 : yabai -m space --focus 8
 cmd + alt - 9 : yabai -m space --focus 9

# send window to desktop and follow focus
 ctrl + cmd - n  : yabai -m window --space next; yabai -m space --focus next
 ctrl + cmd - 1  : yabai -m window --space 1; yabai -m space --focus 1
 ctrl + cmd - 2  : yabai -m window --space 2; yabai -m space --focus 2
 ctrl + cmd - 3  : yabai -m window --space 3; yabai -m space --focus 3
 ctrl + cmd - 4  : yabai -m window --space 4; yabai -m space --focus 4

# move floating window
 shift + ctrl - a : yabai -m window --move rel:-20:0
 shift + ctrl - s : yabai -m window --move rel:0:20

# increase window size
 shift + alt - h : yabai -m window --resize left:-20:0
 shift + alt - k : yabai -m window --resize top:0:-20
 shift + alt - l : yabai -m window --resize right:20:0
 shift + alt - j : yabai -m window --resize bottom:0:20

# decrease window size
 shift + cmd - k : yabai -m window --resize bottom:0:-20
 shift + cmd - j : yabai -m window --resize top:0:20
 shift + cmd - h : yabai -m window --resize right:-20:0
 shift + cmd - l : yabai -m window --resize left:20:0

# rotate tree
shift + cmd - r : yabai -m space --rotate 90

# toggle window zoom
 alt - d : yabai -m window --toggle zoom-parent
 alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
 alt - e : yabai -m window --toggle split

# float / unfloat window and center on screen
 alt - t : yabai -m window --toggle float;\

# toggle sticky(+float), topmost, border and picture-in-picture
 alt - p : yabai -m window --toggle pip;\
           yabai -m window --toggle topmost;\
           yabai -m window --toggle border;\
           yabai -m window --toggle pip

# toggle topmost (keep above other windows)
alt - o : yabai -m window --toggle topmost

# change layout of desktop
 ctrl + alt - s : yabai -m space --layout bsp
 ctrl + alt - f : yabai -m space --layout float
